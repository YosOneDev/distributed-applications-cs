@{
    ViewData["Title"] = "Add Image URL";
    var eventId = (int)ViewData["EventId"];
    var eventName = ViewData["EventName"] as string;
}

<h2>Add Image for @eventName</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="eventId" value="@eventId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Image URL</label>
        <input type="text" name="imageUrl" class="form-control" />
        <small class="form-text text-muted">Paste a direct link to an image (jpg, png, etc.).</small>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="SportEvents" asp-action="Details" asp-route-id="@eventId" class="btn btn-secondary">
            Back to Event
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
